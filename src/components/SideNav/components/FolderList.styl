.root
  .folder
    border none
    padding 10px 0 10px 0
    width 100%
    text-align left
    outline none
    background-color $sidenav-color
    color $sidenav-text-color
    cursor pointer
    i
      padding-right 10px
      padding-left 20px
    &:hover
      background-color $sidenav-hover-color
    &:active
      background-color lighten($sidenav-hover-color, 10%)
  .activefolder
    border none
    padding 10px 0 10px 0
    width 100%
    text-align left
    outline none
    background-color lighten($sidenav-color, 10%)
    color $sidenav-text-color
    cursor pointer
    i
      padding-right 10px
      padding-left 20px
    &:hover
      background-color lighten($sidenav-hover-color, 10%)
