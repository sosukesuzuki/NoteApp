.root
  .folder
    border-top 1px solid $border-color
    border-bottom 1px solid $border-color
    padding 10px 0 10px 0
    width 100%
    text-align left
    outline none
    background-color $sidenav-color
    color $sidenav-text-color
    i
      padding-right 10px
      padding-left 20px
    &:hover
      background-color $sidenav-hover-color
    &:active
      font-weight 900
